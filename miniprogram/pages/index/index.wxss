.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--medium-text);
  margin-top: 10rpx;
}

.main-button-container {
  width: 90%;
  margin-bottom: 80rpx;
}

.main-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-color);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  padding: 40rpx 0;
  border-radius: 8rpx;
  box-shadow: 0 8rpx 16rpx rgba(231, 76, 60, 0.2);
  transition: transform 0.2s;
}

.main-button:active {
  transform: scale(0.98);
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.recent-history {
  width: 90%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--dark-text);
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  margin-right: 16rpx;
  border-radius: 0;
}

.records-list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.record-item {
  display: flex;
  background-color: var(--card-bg);
  border-radius: 8rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
  border-left: 8rpx solid var(--primary-color);
}

.record-item:active {
  transform: scale(0.99);
}

.food-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.record-time {
  font-size: 24rpx;
  color: var(--light-text);
}

.record-feedback {
  font-size: 28rpx;
  color: var(--dark-text);
  font-weight: 500;
  margin-top: 10rpx;
  line-height: 1.5;
}

.empty-state {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-illustration {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  color: var(--light-text);
  text-align: center;
  line-height: 1.6;
}

.harsh-tip {
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: var(--primary-light);
  border-radius: 8rpx;
  font-size: 32rpx;
  color: var(--primary-dark);
  font-weight: 500;
  width: 90%;
  border-left: 8rpx solid var(--primary-color);
} 