.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #000;
}

.camera-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
}

.camera-intro {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 10;
}

.intro-content {
  padding: 30px;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(231, 76, 60, 0.9);
  border-radius: 16px;
}

.intro-title {
  font-size: 28px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20px;
}

.intro-desc {
  font-size: 18px;
  color: #fff;
  text-align: center;
  margin-bottom: 30px;
}

.intro-button {
  background-color: #fff;
  color: #E74C3C;
  border: none;
  padding: 12px 30px;
  border-radius: 50px;
  font-size: 18px;
  font-weight: bold;
}

.camera-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px 0;
  background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0));
}

.control-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
}

.control-button {
  width: 60px;
  display: flex;
  justify-content: center;
}

.control-button text {
  color: #fff;
  font-size: 16px;
}

.capture-button {
  width: 70px;
  height: 70px;
  margin: 0 30px;
  border-radius: 50%;
  border: 4px solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.capture-button-inner {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #E74C3C;
}

.preview-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  display: flex;
  flex-direction: column;
  z-index: 11;
}

.preview-image {
  flex: 1;
  width: 100%;
}

.preview-controls {
  display: flex;
  padding: 20px;
  background-color: #1E1E1E;
}

.preview-button {
  flex: 1;
  margin: 0 10px;
  padding: 12px 0;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  border: none;
}

.preview-button.cancel {
  background-color: #2C2C2C;
  color: #E74C3C;
}

.preview-button.confirm {
  background-color: #E74C3C;
  color: #fff;
}

.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 12;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #E74C3C;
  animation: spin 1s linear infinite;
  margin-bottom: 15px;
}

.loading-text {
  color: #fff;
  font-size: 18px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 