.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.records-list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.record-date {
  font-size: 26rpx;
  color: #999;
  padding: 20rpx 10rpx;
  font-weight: 500;
}

.record-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.record-content {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.food-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.feedback-preview {
  font-size: 28rpx;
  color: #555;
  margin-bottom: 20rpx;
}

.feedback-text {
  line-height: 1.4;
}

.user-opinion-tag {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.healthy {
  background-color: #E8F5E9;
  color: #388E3C;
}

.unhealthy {
  background-color: #FFEBEE;
  color: #D32F2F;
}

.unknown {
  background-color: #E3F2FD;
  color: #1976D2;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.take-photo-button {
  background-color: #FF6B6B;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
} 